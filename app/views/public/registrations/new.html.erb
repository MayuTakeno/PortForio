<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="container">
  <div class="row">
    <div class="col-md-3" style="text-align: center;">
      <h4>社員登録</h4>
      <%= render "public/shared/error_messages", resource: resource %>
    </div>

    <div class="col-md-6">



  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", size:"40" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password",placeholder: "パスワード(8~36文字)", size: "40" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認)", size: "40" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
    </div>
  </div>
</div>
<% end %>

<%= render "public/shared/links" %>
