<div class="container">
  <div class="row">
    <div class="col-md-2" style="text-align: center;">
      <h4>ブログ詳細</h4>
    </div>
    <div class="col-md-8" style="text-align: center;">
      <%= image_tag @blog.get_image, size: "300x300" %>
      <br>
      <br>
      <strong><%= @blog.title %></strong>
      <br>
      <br>
      <div style="border-top: 1px solid #000000;">
        <br>
        <h6>
          <%= simple_format @blog.body %>
        </h6>
      </div>
    </div>
  </div>
  <% if employee_signed_in? && @blog.employee_id == current_employee.id %>
  <div class="row">
    <div class="col" style="text-align: center; margin-top: 20px;">
      <%= link_to edit_public_blog_path(@blog), class: 'btn btn-sm btn-success' do %>
        編集
      <% end %>
    </div>
  </div>
  <% end %>
</div>