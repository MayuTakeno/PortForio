<!--ブログ投稿ページ-->

<%= form_with model: @blog, url: public_blogs_path, method: :post do |f| %>
  <div class="container blog-container">
    <div class="row">
      <!--見出し-->
      <div class="col-md-2 blog-new-logo">
        <h4>社員ブログ<br>投稿</h4>
      </div>
      <!--入力内容-->
      <div class="col-md-8 blog-new-body">
        <!--title-->
        <div class="field">
          <strong>タイトル</strong><br>
          <%= f.text_field :title, autofocus: true, autocomplete: "title", placeholder: "題名", size: "50" %>
        </div>
        <br>
        <!--body-->
        <div class="field">
          <strong>内容</strong><br>
          <%= f.text_area :body, autocomplete: "body", placeholder: "内容", size: "50x20" %>
        </div>
        <br>
        <!--画像-->
        <div class="field">
          <strong>画像</strong><br>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <br>
        <!--submit 投稿-->
        <div class="field">
          <%= f.submit "投稿", class: 'btn btn-sm btn-info' %>
        </div>
      </div>
      <!--エラーメッセージ-->
      <div class="col-md-2 blog-new-errors">
      <strong>
        <%= render 'layouts/errors', obj: @blog %>
      </strong>
      </div>
    </div>
  </div>
<% end %>