<!--ブックマーク機能-->

<% if blog.favorited_by?(current_employee) %>
  <%= link_to public_blog_favorites_path(blog), remote: true, method: :delete do %>
    <i class="fas fa-heart" style="color: red;"></i><%= blog.favorites.count %>
  <% end %>
<% else %>
  <%= link_to public_blog_favorites_path(blog), data: {"turbolinks" => false}, remote: true, method: :post, class: 'favorite_btn' do %>
    <i class="far fa-heart" style="color: red;"></i><%= blog.favorites.count %>
  <% end %>
<% end %>