<div class="container">
  <div class="row">
    <div class="col-md-2" style="text-align: center;">
      <h4><%= @chat.employee.name %><br>さんとの<br>チャット</h4>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-6">
      <div class="box" style="text-align: center; border: 1px solid #000000; height: 90px;">
        <span><%= @chat.title %></span>
        <br>
        <strong style="line-height: 50px;"><%= @chat.body %></strong>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2" style="text-align: center; margin-top: 50px;">
      <p>メッセージ全<%= @chat.chat_messages.count %>件</p>
    </div>
    <div class="col-md-8" style="text-align: center; margin-top: 50px;">
      <div class="new-comment">
        <!--コメント入力のフォーム-->
        <%= render 'public/chat_messages/form', chat: @chat, chat_message: @chat_message %>
      </div>
      <div id="comments_area">
        <!--コメントを表示させたいテーブル-->
        <%= render 'public/chat_messages/comments', chat: @chat %>
      </div>
  
    </div>
    <div class="col-md-2">
    </div>
  </div>
</div>
