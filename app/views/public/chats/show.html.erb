<div class="container">
  <div class="row">
    <div class="col-md-2" style="text-align: center;">
      <h4><%= @chat.employee.name %><br>さんとの<br>チャット</h4>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-6">
      <div class="box" style="text-align: center; border: 1px solid #000000; height: 100px;">
        <span><%= @chat.title %></span>
        <br>
        <strong style="line-height: 50px;"><%= @chat.body %></strong>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2" style="text-align: center; margin-top: 50px;">
      <p>メッセージ全<%= @chat.chat_messages.count %>件</p>
    </div>
    <div class="col-md-8" style="text-align: center; margin-top: 50px;">
      <div>
      <%= @chat.chat_messages.each do |chat_message| %>
        <%= chat_message.employee.name %>
        <%= chat_message.created_at.strftime("%Y/%m/%d %H:%M") %><%= chat_message.message %>
      <% end %>
      <div>
        <%= form_with model: [@chat, @chat_message] do |f| %>
          <%= f.text_area :message, rows: "5", placeholder: "応答" %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
