<!--Q＆A一覧ページ-->

<div class="container">
<!--_formの部分テンプレート-->
<div id="chatform-btn">
  <%= render 'form', chat: @chat %>
</div>

  <div class="row">
    <!--見出し-->
    <div class="col-md-2 chat-index-title">
      <h4>過去の<br>質疑応答</h4>
    </div>
    <!--表示内容-->
    <div class="col-md-8 chat-index-body">
      <table class="table chat-index-table">
        <!--テーブル見出し-->
        <thead>
          <tr>
            <th>タイトル</th>
            <th>質問内容</th>
            <th>投稿日</th>
            <th>QAチャット</th>
            <th></th>
          </tr>
        </thead>
        <!--テーブル内容-->
        <tbody id="tbody">
          <%= render partial: 'tbody', collection: @chats , as: :chat  %>
        </tbody>
      </table>
    </div>
    <!--検索機能リンク-->
    <div class="col-md-2 chat-index-link">
      <%= render 'public/searches/search_chat' %>
    </div>
  </div>
  <!--ページネーションリンク-->
  <%= render 'layouts/paginate', obj: @chats %>
</div>