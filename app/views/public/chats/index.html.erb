<!--_formの部分テンプレート-->
<div id="chatform-btn">
  <%= render 'form', chat: @chat %>
</div>

<div class="container" style="margin-top: 30px;">
  <div class="row">
    <div class="col-md-2" style="text-align: center;">
      <h4>過去の<br>質疑応答</h4>
    </div>
    <div class="col-md-9">
      <table class="table">
        <thead>
      <% @chats.each do |chat| %>
          <tr>
            <th>タイトル</th>
            <td><%= chat.title %></td>
            <th width="100px">投稿者</th>
            <td><%= chat.employee.name %></td>
            <th>投稿日</th>
            <td><%= chat.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>質問内容</th>
            <td colspan="4"><%= simple_format chat.body %></td>
            <td></td>
          </tr>
      <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-1">
      検索フォームを部分テンプレートで
    </div>
  </div>
</div>