<!--Q＆A一覧ページ-->

<div class="container">
<!--_formの部分テンプレート-->
<div id="chatform-btn" style="margin-bottom: 30px;">
  <%= render 'form', chat: @chat %>
</div>

  <div class="row">
    <!--見出し-->
    <div class="col-md-2" style="text-align: center;">
      <h4>過去の<br>質疑応答</h4>
    </div>
    <!--表示内容-->
    <div class="col-md-8" >
      <table class="table" style="table-layout: fixed; word-wrap: break-word;">
        <!--テーブル見出し-->
        <thead>
          <tr>
            <th>タイトル</th>
            <th>質問内容</th>
            <th>投稿日</th>
            <th>QAチャット</th>
            <th></th>
          </tr>
        </thead>
        <!--テーブル内容-->
        <tbody id="tbody">
          <%= render partial: 'tbody', collection: @chats , as: :chat  %>
        </tbody>
      </table>
    </div>
    <!--検索機能リンク-->
    <div class="col-md-2" style="text-align: center; margin-bottom: 30px;">
      <%= render 'public/searches/search_chat' %>
    </div>
  </div>
  <!--ページネーションリンク-->
  <%= render 'layouts/paginate', obj: @chats %>
</div>