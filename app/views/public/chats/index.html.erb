<!--_formの部分テンプレート-->
<div id="chatform-btn">
  <%= render 'form', chat: @chat %>
</div>

<div class="container" style="margin-top: 30px;">
  <div class="row">
    <div class="col-md-2" style="text-align: center;">
      <h4>過去の<br>質疑応答</h4>
    </div>
    <div class="col-md-8">
      <table class="table" style="table-layout: fixed; word-wrap: break-word;">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>質問内容</th>
            <th>投稿日</th>
            <th>QAチャット</th>
            <th></th>
          </tr>
        </thead>
        <tbody id="tbody">
          <%= render partial: 'tbody', collection: @chats , as: :chat  %>
        </tbody>
      </table>
    </div>
    <div class="col-md-2">
      <%= render 'public/searches/search_chat' %>
    </div>
  </div>
</div>