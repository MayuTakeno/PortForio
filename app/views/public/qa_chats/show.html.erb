<%= form_with model: @qa_chat, url: public_qa_chats_path, local: false, data: {"turbolinks" => false}, remote: true do |f| %>
<div class="container">
  <div class="row">
    <div class="col-md-2" style="text-align: center;">
      <h4><%= @employee.first_name %>さんの<br>Q＆A</h4>
    </div>
    <div class="col-md-8" style="text-align: center;">
      <div class="errors">
        <%= render 'layouts/errors', obj: @qa_chat %>
      </div>
      <div class="field">
        <%= f.text_field :title, autofocus: true, autocomplete: "title", placeholder: "題名", size: "50" %>
      </div>
      <br>
      <div class="field">
        <%= f.text_area :message, autocomplete: "message", placeholder: "質問", size: "50x5" %>
      </div>
      <%= f.hidden_field :room_id %>
      <br>
      <div class="field">
        <%= f.submit "質問", class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>
<% end %>

<div id="chats-buttons_<%= @qa_chat.id %>">
  <%= render "chats", qa_chats: @qa_chats, employee: @employee %>
</div>


