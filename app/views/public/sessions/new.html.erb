<%= form_with url: employee_session_path do |f| %>
<div class="container">
  <div class="row">
    <div class="col-md-3" style="text-align: center;">
      <h4>ログイン</h4>
    </div>

    <div class="col-md-6" style="text-align: center;">

      <div class="field">
        <%= f.text_field :name ,autofocus: true, autocomplete: "name", placeholder: "氏名", size: "40" %>
      </div>
      <br>
      <div class="field">
        <%= f.text_field :assigned_to, autocomplete: "assigned_to", placeholder: "配属先", size:"40" %>
      </div>
      <br>
      <div class="field">
        <%= f.text_field :employee_code, autocomplete: "employee_code", placeholder: "社員番号", size:"40" %>
      </div>
      <br>
      <div class="field">
        <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", size:"40" %>
      </div>
      <br>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", size:"40" %>
      </div>
      <br>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>

    </div>
  </div>
</div>
<% end %>
<div class="link" style="text-align: center; margin-top: 20px;">
  <strong>社員登録がお済みでない方は</strong>
  <br>
  <%= render "public/shared/links" %>
</div>
