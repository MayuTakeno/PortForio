<!--news一覧-->

<div class="container">
  <div class="row">
    <!--見出し-->
    <div class="col-md-2" style="text-align: center;">
      <h4>News</h4>
    </div>
    <!--表示内容-->
    <div class="col-md-8" style="margin-bottom: 30px;">
      <table class="table" style="table-layout: fixed; word-wrap: break-word;">
        <!--テーブル見出し-->
        <thead>
          <tr>
            <th></th>
            <th>題名</th>
            <th>投稿日時</th>
          </tr>
        </thead>
        <% @notices.each do |notice| %>
        <!--テーブル内容-->
        <tbody>
          <tr>
            <!--画像-->
            <td><%= image_tag notice.get_image, size: "50x50" %></td>
            <!--リンク付きtitle-->
            <td>
              <%= link_to public_notice_path(notice) do %>
                <%= notice.title %>
              <% end %>
            </td>
            <!--投稿日時-->
            <td><%= notice.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <!--検索機能リンク-->
    <div class="col-md-2" style="text-align: center; margin-bottom: 30px;">
      <%= render 'public/searches/search_notice' %>
    </div>
  </div>
  <!--ページネーション-->
  <%= render 'layouts/paginate', obj: @notices %>
</div>