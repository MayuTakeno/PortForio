<div>
  <%= chat.chat_messages.each do |chat_message| %>
    <%= chat_message.employee.name %>
    <%= chat_message.created_at.strftime("%Y/%m/%d %H:%M") %>
  <% end %>
<div>
  <%= form_with model: [chat, chat_message] do |f| %>
    <%= f.text_area :message, placeholder: "応答" %>
    <%= f.submit "送信", class: 'btn btn-sm btn-seccess' %>
  <% end %>
</div>