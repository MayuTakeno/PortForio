<div class="container">
  <div class="row">
    <div class="col-md-2" style="text-align: center;">
      <h4>製品詳細</h4>
    </div>
    <div class="col-md-8" style="text-align: center;">
      <%= image_tag @product.get_image, size: "300x300" %>
    </div>
    <div class="col-md-2" style="text-align: center; margin-top: 20px;">
      <%= link_to "編集", edit_admin_product_path(@product), class: 'btn btn-sm btn-success' %>
      <br><br>
      <%= link_to "削除", admin_product_path(@product), method: :delete, class: 'btn btn-sm btn-danger' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2" style="text-align: center; margin-top: 50px; margin-bottom: 30px;">
      <h4>製品概要</h4>
    </div>
    <div class="col-md-8" style="margin-top: 50px; margin-bottom: 30px;">
      <table class="table" style="table-layout: fixed; word-wrap: break-word;">
        <tr>
          <th>製品名</th>
          <td><%= @product.name %></td>
          <th>税抜(税込)価格</th>
          <td><%= @product.price %>(<%= @product.with_tax_price.to_s(:dalimited) %>)円</td>
        </tr>
        <tr>
          <th>製品詳細</th>
          <td colspan="3"><%= simple_format @product.caption %></td>
        </tr>
        <tr>
          <th>製造日</th>
          <td><%= @product.make_day %></td>
          <th>販売状況</th>
          <td><%= @product.is_active == true ? "販売中" : "非公開" %></td>
        </tr>
        <tr>
          <th>関連タグ</th>
          <td colspan="3">
            <% @product_tags.each do |tag| %>
              <%= tag.tag_name %> /
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
