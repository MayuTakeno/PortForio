<table class="table" style="table-layout: fixed; word-wrap: break-word;">
  <tr>
  </tr>
  <% chat.chat_messages.each do |chat_message| %>
  <tr>
    <td colspan="3"><%= chat_message.created_at %></td>
  </tr>
  <tr>
    <td><%= chat_message.employee.first_name %> さん<br><%= chat_message.employee.assigned_to %></td>
    <td width="700px"><%= simple_format chat_message.message %></td>
    <td><%= link_to "削除", admin_chat_chat_message_path(chat_message.chat, chat_message), method: :delete, class: 'btn btn-sm btn-danger' %></td>
  </tr>
<% end %>
</table>