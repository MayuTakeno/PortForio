<!--チャット詳細画面-->

<div class="container">
  <div class="row">
    <!--上部見出し-->
    <div class="col-md-2" style="text-align: center;">
      <h4><%= @chat.employee.name %><br>さんの<br>チャット</h4>
    </div>
    <!--上部内容表示-->
    <div class="col-md-8">
      <div class="box" style="padding-top: 10px; text-align: center; border: 1px solid rgba(0 , 0, 0, 0.2); background-color: rgba(255,255,255,0.5);">
        <!--chat title-->
        <span><%= @chat.title %></span>
        <br>
        <!--chat body-->
        <strong style="line-height: 50px;"><%= @chat.body %></strong>
      </div>
    </div>
  </div>
  <div class="row">
    <!--下部見出し-->
    <div class="col-md-2" style="text-align: center; margin-top: 50px;">
      <p>メッセージ全<%= @chat.chat_messages.count %>件</p>
    </div>
    <!--下部内容表示-->
    <div class="col-md-8" style="text-align: center; margin-top: 50px; margin-bottom: 30px;">
        <!--コメント内容表示リンク-->
      <div id="comments_area">
        <%= render 'admin/chat_messages/chat_message', chat: @chat, chat_message: @chat_message %>
      </div>
    </div>
  </div>
</div>