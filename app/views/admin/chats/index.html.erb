<!--チャット一覧管理-->

<div class="container chat-container">
  <div class="row">
    <!--見出し-->
    <div class="col-md-2 chat-index-logo">
      <h4>質疑応答一覧</h4>
    </div>
    <!--内容表示-->
    <div class="col-md-8">
      <table class="table chat-table">
        <!--テーブル見出し-->
        <thead>
          <tr>
            <th>タイトル</th>
            <th>質問内容</th>
            <th>投稿日</th>
            <th>QAチャット</th>
            <th></th>
          </tr>
        </thead>
        <% @chats.each do |chat| %>
        <!--テーブル内容表示-->
        <tbody>
          <tr>
            <!--title-->
            <td><%= simple_format chat.title %></td>
            <!--body-->
            <td><%= simple_format chat.body %></td>
            <!--投稿日時-->
            <td><%= chat.created_at.strftime("%Y/%m/%d %H:%M") %></td>
            <!--リンク付きアイコン-->
            <td>
              <%= link_to admin_chat_path(chat.id) do %>
                <i class="far fa-comment"></i>
              <% end %>
            </td>
            <!--削除リンク-->
            <td><%= link_to "削除", admin_chat_path(chat), method: :delete, class: 'btn btn-sm btn-danger' %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <!--ページネーション-->
  <div class="pagination">
    <%= render 'layouts/paginate', obj: @chats %>
  </div>
</div>