<%= form_with model: @event, url: admin_events_path do |f| %>
<div class="container">
  <div class="row">
    <div class="col-md-2" style="text-align: center;">
      <h4>イベント<br>新規作成</h4>
    </div>
    <div class="col-md-8" style="text-align: center;">
      <table>
        <div class="field">
          <%= f.label "タイトル" %>
          <br>
          <%= f.text_field :title, autofocus: true, autocomplete: "title", placeholder: "必ず入力してください", size: "50" %>
        </div>
        <br>
        <div class="field">
          <%= f.label "投稿内容" %>
          <br>
          <%= f.text_area :body, autocomplete: "body", placeholder: "必ず入力してください", size: "50x10" %>
        </div>
        <br>
        <div class="field">
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="field">
          <%= f.hidden_field :hold_status, autocomplete: "hold_status" %>
        </div>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col" style="text-align: center; margin-top: 20px;">
      <%= f.submit "投稿", class: 'btn btn-sm btn-success' %>
    </div>
  </div>
</div>
<% end %>