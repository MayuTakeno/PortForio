<div class="container">
  <div class="row">
    <div class="col-md-2" style="text-align: center;">
      <h4>Events</h4>
    </div>
    <div class="col-md-8">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>イベント名</th>
            <th>主催者</th>
            <th>開催日時</th>
            <th>開催状況</th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
          <tr>
            <td><%= image_tag event.get_image, size: "50x50" %></td>
            <td>
              <%= link_to admin_event_path(event) do %>
                <%= event.title %>
              <% end %>
              </td>
            <td><%= event.organizer %></td>
            <td><%= event.date_and_time.strftime("%Y/%m/%d %H:%M") %></td>
            <td><%= event.hold_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-2" style="text-align: center;">
      <%= link_to new_admin_event_path, class: 'btn btn-info btn-sm' do %>
        新規作成
      <% end %>
    </div>
  </div>
</div>