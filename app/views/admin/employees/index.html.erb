<!--社員一覧管理-->

<div class="container">
  <div class="row">
    <!--見出し-->
    <div class="col-md-2" style="text-align: center;">
      <h4>社員一覧</h4>
    </div>
    <!--内容表示-->
    <div class="col-md-8" style="margin-bottom: 30px;">
      <table class="table" style="table-layout: fixed; word-wrap: break-word;">
        <!--テーブル見出し-->
        <thead>
          <tr>
            <th>氏名</th>
            <th>社員コード</th>
            <th>配属先</th>
            <th>登録日時</th>
            <th>在籍状態</th>
          </tr>
        </thead>
        <!--テーブル内容表示-->
        <tbody>
          <% @employees.each do |employee| %>
          <tr>
            <!--リンク付き社員名-->
            <td>
              <%= link_to admin_employee_path(employee) do %>
                <%= employee.first_name %><%= employee.last_name %>
              <% end %></td>
              <!--employee_code-->
            <td><%= employee.employee_code %></td>
            <!--assigned_to-->
            <td><%= employee.assigned_to %></td>
            <!--登録日-->
            <td><%= employee.created_at.strftime("%Y/%m/%d %H:%M") %></td>
            <!--退会フラグ-->
            <td>
              <% if employee.is_deleted? %>
                在籍
              <% else %>
                退職済み
              <% end %>
            </td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <!--ページネーション-->
  <%= render 'layouts/paginate', obj: @employees %>
</div>