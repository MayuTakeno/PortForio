<!--社員情報詳細ページ-->

<%= form_with model: @employee, url: admin_employees_path do |f| %>
<div class="container employee-container">
  <div class="row">
    <!--見出し-->
    <div class="col-md-2 employee-show-logo">
      <h4>社員情報</h4>
    </div>
    <div class="col-md-1"></div>
    <!--内容表示-->
    <div class="col-md-6 employee-show-body">
      <table class="table employee-table">
        <!--氏名-->
        <tr>
          <th>氏名</th>
          <td><%= @employee.first_name %><%= @employee.last_name %></td>
        </tr>
        <!--配属先-->
        <tr>
          <th>配属先</th>
          <td><%= @employee.assigned_to %></td>
        </tr>
        <!--社員コード-->
        <tr>
          <th>社員コード</th>
          <td><%= @employee.employee_code %></td>
        </tr>
        <!--電話番号-->
        <tr>
          <th>電話番号</th>
          <td><%= @employee.phone_number %></td>
        </tr>
        <!--在籍状況-->
        <tr>
          <th>在籍状況</th>
          <td>
            <% if @employee.is_deleted? %>
              在籍
            <% else %>
              退職済み
            <% end %>
          </td>
        </tr>
      </table>
    </div>
    <!--リンク-->
    <div class="col-md-2 employee-show-link">
      <% if @employee.first_name != "guest" %>
      <%=link_to "編集", edit_admin_employee_path(@employee), class: 'btn btn-sm btn-success' %>
      <% end %>
    </div>
  </div>
</div>
<% end %>