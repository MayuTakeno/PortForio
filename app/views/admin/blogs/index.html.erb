<div id="chart">
  <canvas id="myLineChart">
    <script>
      $(document).on('turbolinks:load', function(){
        var ctx = document.getElementById("myLineChart");
        var myLineChart = new Chart(ctx, {
          type: 'line',
          data: {
            labels: ['６日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
            datasets: [
              {
                label: '投稿数',
                data: <%= @blogs.week_count %>,
                borderColor: "rgba(0,0,255,1)",
                backgroundColor: "rgba(0,0,0,0)"
              }
            ],
          },
          options: {
            // タイトルをグラフ状に設置
            title: {
              display: true,
              text: '7日間の投稿数の比較'
            },
            // scales: {
              // yAxes: [{
                // ticks: {
                  // suggestedMax: 10,
                  // suggestedMin: 0,
                  // stepsize: 1,
                  // callback: function(value, index, values){
                    // return value
                  // }
                // }
              // }]
            // },
            responsive: true
          }
        });
      });
    </script>
  </canvas>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-2" style="text-align: center;">
      <h4>社員Blog<br>一覧</h4>
    </div>
    <div class="col-md-8" style="margin-bottom: 30px;">
      <table class="table" style="table-layout: fixed; word-wrap: break-word; ">
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>投稿者</th>
            <th>投稿日時</th>
            <th>いいね数</th>
          </tr>
        </thead>
        <tbody>
          <% @blogs.each do |blog| %>
          <tr>
            <td><%= image_tag blog.image, size: "50x50" %></td>
            <td>
              <%= link_to admin_blog_path(blog) do %>
                <%= blog.title %>
              <% end %>
              </td>
            <td><%= blog.employee.name %></td>
            <td><%= blog.created_at.strftime("%Y/%m/%d %H:%M") %></td>
            <td>♡<%= blog.favorites.count %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-2" style="text-align: center; margin-bottom: 30px;">
      <%= render 'admin/searches/search_blog' %>
    </div>
  </div>
</div>