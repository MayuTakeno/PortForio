<div class="container">
  <div class="row">
    <div class="col-md-2" style="text-align: center;">
      <h4>社員Blog<br>一覧</h4>
    </div>
    <div class="col-md-8">
      <table class="table" style="table-layout: fixed; word-wrap: break-word; ">
        <thead>
          <tr>
            <th></th>
            <th>タイトル</th>
            <th>投稿者</th>
            <th>投稿日時</th>
          </tr>
        </thead>
        <tbody>
          <% @blogs.each do |blog| %>
          <tr>
            <td><%= image_tag blog.image, size: "50x50" %></td>
            <td>
              <%= link_to admin_blog_path(blog) do %>
                <%= blog.title %>
              <% end %>
              </td>
            <td><%= blog.employee.name %></td>
            <td><%= blog.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>