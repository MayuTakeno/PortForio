<%= form_with model: @tag, url: admin_tags_path, method: :post do |f| %>
<div class="container">
  <div class="row">
    <div class="col-md-2" style="text-align:; center margin-bottom: 30px;">
      <h4>タグ登録</h4>
    </div>
    <div class="col-md-8" style="text-align: center; margin-bottom: 30px;">
      <div class="field">
        <%= f.text_field :tag_name, autofocus: true, autocomplete: "name", placeholder: "タグを入力してください", size: "30" %>
      </div>
      <br>
      <div class="field">
        <%= f.submit "登録", class: 'btn btn-sm btn-success' %>
      </div>
    </div>
    <div class="col-md-2" style="text-align: center; margin-bottom: 30px;">
      <%= render 'layouts/errors', obj: @tag %>
    </div>
  </div>
</div>
<% end %>