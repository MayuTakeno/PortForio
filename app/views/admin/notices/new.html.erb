<!--記事作成ページ-->

<%= form_with model: @notice, url: admin_notices_path do |f| %>
<div class="container notice-container">
  <div class="row">
    <!--見出し-->
    <div class="col-md-2 notice-new-logo">
      <h4>NEWS作成</h4>
    </div>
    <!--入力内容1-->
    <div class="col-md-8 notice-new-body">
      <table>
        <!--title-->
        <div class="field">
          <%= f.label "タイトル" %>
          <br>
          <%= f.text_field :title, autofocus: true, autocomplete: "title", placeholder: "タイトル", size: "50" %>
        </div>
        <!--body-->
        <div class="field">
          <%= f.label "記事" %>
          <br>
          <%= f.text_area :body, autocomplete: "body", placeholder: "投稿内容", size: "50x10" %>
        </div>
      </table>
    </div>
    <!--入力内容2-->
    <div class="col-md-2 notice-new-body-2">
      <!--caption-->
      <div class="field">
        <%= f.label "補足" %>
        <%= f.text_area :caption, autocomplete: "caption",placeholder: "補足説明", size: "20x3" %>
      </div>
      <br>
      <!--画像-->
      <div class="field">
        <%= f.label "イメージ画像" %>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>
  </div>
  <div class="row">
    <!--入力内容3-->
    <div class="col notice-new-body-3">
      <!--submit 作成-->
      <div class="field">
        <%= f.submit "作成", class: 'btn btn-sm btn-success' %>
      </div>
      <!--エラーメッセージ-->
      <div class="notice-error">
        <%= render "layouts/errors", obj: @notice %>
       </div>
    </div>
  </div>
</div>
<% end %>